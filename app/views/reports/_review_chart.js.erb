var ctx = document.getElementById("ChartFlag<%= record.concept_id %>-<%= record.revision_id %>");

var data = {
  labels: [
    "Red",
    "Blue",
    "Yellow",
    "Green"
  ],
  datasets: [
    {
      data: [
        <%= field_colors["red"]%>,
        <%= field_colors["blue"]%>,
        <%= field_colors["yellow"]%>,
        <%= field_colors["green"]%>
      ],
      backgroundColor: [
        "#e84a34",
        "#1b75ae",
        "#ffce00",
        "#3ab841"
      ],
      hoverBackgroundColor: [
        "#e84a34",
        "#1b75ae",
        "#ffce00",
        "#3ab841"
      ]
    }
  ]
};

var myChart = new Chart(ctx, {
  type: 'doughnut',
  data: data,
  options: {
    legend:{
      display:false
    },
    maintainAspectRatio: false,
    pieceLabel: {
      mode: 'value',
      fontSize: 18,
      fontStyle: 'bold'
    }
  }
});
