<tr class="user_input">
  <th class="inputlabelcol recommendation_col"></th>
  <th class="headcol headcol__user-row">
    <p>RECOMMENDATION</p>
    <!-- <p class="headcol_subtitle">(Visible on Reports)</p> -->
  </th>
  <% section_titles.each do |title| %>
    <td class="recommendation_cell column_<%=title%>">
      <div class="new_discussion">
        <% placeholderText = enabled ? "New Recommendation..." : "None" %>
        <textarea <%= enabled ? '' : 'disabled' %> class="input_entry" name="recommendation[<%= title %>]" placeholder='<%= placeholderText %>' oninput="activateSaveButton()" onchange="recommendationMonitor(this)" form="field_form"><%=recommendations[title]%></textarea>
      </div>
    </td>
  <% end %>
</tr>
